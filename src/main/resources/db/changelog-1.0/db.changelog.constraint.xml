<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="lmt-backend" id="C-001">
        <addPrimaryKey        tableName="EMPLOYEE" columnNames="ID"                         />
        <addAutoIncrement     tableName="EMPLOYEE" columnName ="ID" columnDataType="bigint" />

        <addNotNullConstraint tableName="EMPLOYEE" columnName="FIRSTNAME" 			columnDataType="varchar(128)" />
		<addNotNullConstraint tableName="EMPLOYEE" columnName="LASTNAME" 			columnDataType="varchar(128)" />
		<addNotNullConstraint tableName="EMPLOYEE" columnName="MAIL_PROFESIONAL" 	columnDataType="varchar(128)" />
		<addNotNullConstraint tableName="EMPLOYEE" columnName="PHONE_NUMBER" 		columnDataType="varchar(128)" />
    </changeSet>

    <changeSet author="lmt-backend" id="C-002">
        <addPrimaryKey        tableName="ENTERPRISE" columnNames="ID"                         />
        <addAutoIncrement     tableName="ENTERPRISE" columnName ="ID" columnDataType="bigint" />

        <addNotNullConstraint tableName="ENTERPRISE" columnName="NAME" columnDataType="varchar(512)" />
    </changeSet>

    <changeSet author="lmt-backend" id="C-003">
        <addPrimaryKey        tableName="EMPLOYEE_PROJECT" columnNames="ID"                         />
        <addAutoIncrement     tableName="EMPLOYEE_PROJECT" columnName ="ID" columnDataType="bigint" />

        <addNotNullConstraint tableName="EMPLOYEE_PROJECT" columnName="EMPLOYEE_ID" 		columnDataType="bigint"         />
        <addNotNullConstraint tableName="EMPLOYEE_PROJECT" columnName="ENTERPRISE_ID" 	columnDataType="bigint"         />
        <addNotNullConstraint tableName="EMPLOYEE_PROJECT" columnName="ENTITLE" 	    columnDataType="varchar(1024)"  />
        <addNotNullConstraint tableName="EMPLOYEE_PROJECT" columnName="DESCRIPTION" 	columnDataType="text"           />
        <addNotNullConstraint tableName="EMPLOYEE_PROJECT" columnName="START_DATE" 		columnDataType="date"           />

        <addForeignKeyConstraint baseTableName          = "EMPLOYEE_PROJECT"
                                 baseColumnNames        = "EMPLOYEE_ID"
                                 constraintName         = "FK_EMPLOYEE_ID"
                                 referencedTableName    = "EMPLOYEE"
                                 referencedColumnNames  = "ID" />

        <addForeignKeyConstraint baseTableName          = "EMPLOYEE_PROJECT"
                                 baseColumnNames        = "ENTERPRISE_ID"
                                 constraintName         = "FK_ENTERPRISE_ID"
                                 referencedTableName    = "ENTERPRISE"
                                 referencedColumnNames  = "ID" />
    </changeSet>

    <changeSet author="lmt-backend" id="C-004">
        <addPrimaryKey        tableName="PROFILE" columnNames="ID"                      />
        <addAutoIncrement     tableName="PROFILE" columnName ="ID" columnDataType="int" />

        <addNotNullConstraint tableName="PROFILE" columnName="NAME" columnDataType="varchar(128)" />
    </changeSet>

    <changeSet author="lmt-backend" id="C-005">
        <addPrimaryKey        tableName="SKILL" columnNames="ID"                           />
        <addAutoIncrement     tableName="SKILL" columnName ="ID" columnDataType="bigint"   />

        <addNotNullConstraint tableName="SKILL" columnName="NAME" columnDataType="varchar(128)" />
    </changeSet>

    <changeSet author="lmt-backend" id="C-006">
        <addPrimaryKey        tableName="EMPLOYEE_PROJECT_SKILL" columnNames="ID"                           />
        <addAutoIncrement     tableName="EMPLOYEE_PROJECT_SKILL" columnName ="ID" columnDataType="bigint"   />

        <addNotNullConstraint tableName="EMPLOYEE_PROJECT_SKILL" columnName="EMPLOYEE_PROJECT_ID"   columnDataType="bigint" />
        <addNotNullConstraint tableName="EMPLOYEE_PROJECT_SKILL" columnName="SKILL_ID"          columnDataType="bigint" />

        <addForeignKeyConstraint baseTableName          = "EMPLOYEE_PROJECT_SKILL"
                                 baseColumnNames        = "EMPLOYEE_PROJECT_ID"
                                 constraintName         = "FK_EMPLOYEE_PROJECT_ID"
                                 referencedTableName    = "EMPLOYEE_PROJECT"
                                 referencedColumnNames  = "ID" />

        <addForeignKeyConstraint baseTableName          = "EMPLOYEE_PROJECT_SKILL"
                                 baseColumnNames        = "SKILL_ID"
                                 constraintName         = "FK_SKILL_ID"
                                 referencedTableName    = "SKILL"
                                 referencedColumnNames  = "ID" />
    </changeSet>

    <changeSet author="lmt-backend" id="C-007">
        <addPrimaryKey        tableName="EMPLOYEE_PROJECT_PROFILE" columnNames="ID" />
        <addAutoIncrement     tableName="EMPLOYEE_PROJECT_PROFILE" columnName ="ID" />

        <addNotNullConstraint tableName="EMPLOYEE_PROJECT_PROFILE" columnName="EMPLOYEE_PROJECT_ID" columnDataType="bigint" />
        <addNotNullConstraint tableName="EMPLOYEE_PROJECT_PROFILE" columnName="PROFILE_ID"      columnDataType="bigint" />

        <addForeignKeyConstraint baseTableName          = "EMPLOYEE_PROJECT_PROFILE"
                                 baseColumnNames        = "EMPLOYEE_PROJECT_ID"
                                 constraintName         = "FK_EMPLOYEE_PROJECT_ID"
                                 referencedTableName    = "EMPLOYEE_PROJECT"
                                 referencedColumnNames  = "ID" />

        <addForeignKeyConstraint baseTableName          = "EMPLOYEE_PROJECT_PROFILE"
                                 baseColumnNames        = "PROFILE_ID"
                                 constraintName         = "FK_PROFILE_ID"
                                 referencedTableName    = "PROFILE"
                                 referencedColumnNames  = "ID" />
    </changeSet>

</databaseChangeLog>